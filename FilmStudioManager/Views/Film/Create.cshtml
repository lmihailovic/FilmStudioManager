@model FilmStudioManager.Models.Film
@{
    ViewData["Title"] = "Create Film";
}

<h1>Create Film</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="FilmName"></label>
        <input asp-for="FilmName" class="form-control" />
        <span asp-validation-for="FilmName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IDGenre">Genre</label>
        <select asp-for="IDGenre" class="form-control" asp-items="@(ViewData["IDGenre"] as SelectList)">
            <option value="">-- Select Genre --</option>
        </select>
        <span asp-validation-for="IDGenre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateOfRelease"></label>
        <input asp-for="DateOfRelease" class="form-control" type="date" />
        <span asp-validation-for="DateOfRelease" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
